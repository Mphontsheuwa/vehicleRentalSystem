<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ListView?>


<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.BookingController">
    <!-- Vehicle Selection -->
    <ComboBox fx:id="vehicleComboBox" layoutX="100" layoutY="50" prefWidth="200" promptText="Select Vehicle"/>

    <!-- Start Date -->
    <DatePicker fx:id="startDatePicker" layoutX="100" layoutY="100" prefWidth="200" promptText="Start Date"/>

    <!-- End Date -->
    <DatePicker fx:id="endDatePicker" layoutX="100" layoutY="150" prefWidth="200" promptText="End Date"/>

    <!-- Submit Button -->
    <Button fx:id="submitBookingButton" layoutX="100" layoutY="200" text="Submit Booking" onAction="#handleBookingSubmission"/>

    <!-- Modify Button -->
    <Button fx:id="modifyBookingButton" layoutX="100" layoutY="250" text="Modify Booking" onAction="#handleModifyBooking"/>

    <!-- Cancel Button -->
    <Button fx:id="cancelBookingButton" layoutX="100" layoutY="300" text="Cancel Booking" onAction="#handleCancelBooking"/>

    <!-- ListView to show current bookings -->
    <ListView fx:id="bookingListView" layoutX="350" layoutY="50" prefWidth="300" prefHeight="200"/>
</AnchorPane>

